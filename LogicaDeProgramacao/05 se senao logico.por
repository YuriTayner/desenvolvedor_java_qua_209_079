programa {
  funcao inicio() {
    // declaração
   cadeia nome 
   inteiro idade
   real altura 

   // ENTRADA DE DADOS 
    escreva ("Informe seu nome:")
    leia (nome)

    escreva ("Informe seu idade:")
    leia (idade)

    escreva ("Informe seu altura:")
    leia (altura)

     // estrutura

    se (idade >= 12 e altura >= 1.15){
      escreva("Você tem autorização para o trem fantasma")
    } senao{
      escreva("Você não tem autorização para entrar no trem fantasma")
    }

  }
}
